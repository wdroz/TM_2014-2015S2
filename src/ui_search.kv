# File name: ui_search.kv

<DeleteButton>:
    source: '../images/del.png'

<SearchField>:
    txtSymbol: symbol
    txtKeywords: keywords
    Label:
        id: symbol
    Label:
        id: keywords
    DeleteButton:
        id: del
        on_press: root.delete_me()

<MySearchUI>:
    btnStart: start
    btnAdd: add
    txtSymbol: symbol
    txtKeywords: keywords
    lyListOfSearch: listOfSearch
    progress: pb
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                id: listOfSearch
                orientation: 'vertical'
                size_hint: 1,0.2
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1,0.2
                    Label:
                        text: 'SYMBOL'
                    TextInput:
                        id: symbol
                        multiline: False
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1,0.2
                    Label:
                        text: 'KEYWORDS'
                    TextInput:
                        id: keywords
                        multiline: False
                BoxLayout:
                    oritentation: 'vertical'
                    size_hint: 1,0.2
                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            id: add
                            text: 'add'
                            on_press: root.add_search()
                        Button:
                            id: start
                            text: 'start'
                            on_press: root.start()
            ProgressBar:
                size_hint: 1,0.2
                id: pb
                max: 100